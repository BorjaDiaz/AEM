<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <text
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Optional text"
                        name="./text"/>
                    <fb
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./fb"
                        text="Add facebook link?"
                        uncheckedValue="false"
                        value="true"/>
                    <linkfb
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        fieldDescription="Enter your Facebook link"    
                        validation="socialURL"                   
                        name="./linkfb"/> 
                    <tw
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./tw"
                        text="Add twitter link?"
                        uncheckedValue="false"
                        value="true"/>
                    <linktw
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        validation="socialURL"
                        name="./linktw"
                        fieldDescription="Enter your Twitter link"/>
                    <li
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./li"
                        text="Add linkedin link?"
                        uncheckedValue="false"
                        value="true"/>
                    <linkli
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        name="./linkli"
                        validation="socialURL"
                        fieldDescription="Enter your LinkedIn link"/>
                    <rs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./rs"
                        text="Add rss link?"
                        uncheckedValue="false"
                        value="true"/>
                    <linkrs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        name="./linkrs"
                        validation="socialURL"
                        fieldDescription="Enter your RSS link"/>
                    <yt
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./yt"
                        text="Add youtube link?"
                        uncheckedValue="false"
                        value="true"/>
                    <linkyt
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        name="./linkyt"
                        validation="socialURL"
                        fieldDescription="Enter your Youtube link"/>
                    <in
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./ins"
                        text="Add instagram link?"
                        uncheckedValue="false"
                        value="true"/>
                    <linkin
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        name="./linkin"
                        validation="socialURL"
                        fieldDescription="Enter your Instagram link"/>
                    <mail
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./mail"
                        text="Add mail link?"
                        uncheckedValue="false"
                        value="true"/>
                    <linkmail
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        name="./linkmail"
                        validation="socialURL"
                        fieldDescription="Enter your e-mail link"/>
                    <id
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="ID"
                        name="./id"
                         required="{Boolean}true"
                        fieldDescription="HTML ID attribute to apply to the component."/>
                </items>
            </column>
        </items>
    </content>    
</jcr:root>
