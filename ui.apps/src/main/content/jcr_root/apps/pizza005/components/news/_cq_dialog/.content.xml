<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <route
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="Pass the route of the news to display "
                        fieldLabel="News route"
                        name="./route"
                        nodeTypes="cq:Page"
                        required="{Boolean}false"
                        rootPath="/content/pizza005"
                        validation="news-path"/>
                    <desing
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                        fieldDescription="Choose the desing for the news to display"
                        fieldLabel="Choose a design"
                        name="./desing"
                        vertical="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <desing_1
                                jcr:primaryType="nt:unstructured"
                                checked="{Boolean}true"
                                text="Desing 1"
                                value="1"/>
                            <desing_2
                                jcr:primaryType="nt:unstructured"
                                text="Desing 2"
                                value="2"/>
                            <desing_3
                                jcr:primaryType="nt:unstructured"
                                text="Desing 3"
                                value="3"/>
                        </items>
                    </desing>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
